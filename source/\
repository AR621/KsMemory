#include "menu.h"

menu::menu()
{
	//Text format
	if (!font.loadFromFile("arial.ttf"))
		printf("Error while loading font from file");
	title.setFont(font);
       	title.setCharacterSize(150);
	title.setFillColor(sf::Color::Red);
	title.setStyle(sf::Text::Bold);
	for (int i = 0; i < buttons.end(); i++)
		buttons.at(i).setFont(font);
		buttons.at(i).setCharacterSize(50);
		buttons.at(i).setFillColor(sf::Color::Red);
		buttons.at(i).setStyle(sf::Text::Bold)
	//Setting text
	title.setString("KsMemory");
		
}
